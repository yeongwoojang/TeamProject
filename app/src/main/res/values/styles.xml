<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/mainColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:listPreferredItemHeightSmall">50dp</item>
        <item name="android:listPreferredItemPaddingLeft">1dp</item>
        <item name="android:listPreferredItemPaddingRight">1dp</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>

    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/white</item>
    </style>

<!--    PopUpMenu-->
    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/recyclerview_border</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:dropDownHorizontalOffset">4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <style name="PopupMenuListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:divider">@color/gray500</item>
        <item name="android:dividerHeight">1dp</item>

    </style>

    <!--MaterialCalendarView-->
    <style name="CalendarWidgetHeader">
        <item name="android:textSize">9pt</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarWidgetWeekDay" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">7pt</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>