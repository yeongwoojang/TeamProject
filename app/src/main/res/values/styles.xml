<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
<!--        <item name="windowActionBar"></item>-->
    </style>
    <style name="CalendarWidgetHeader">
        <item name="android:textSize">9pt</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="CalendarWidgetWeekDay" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">7pt</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/baemin</item>
        <item name="fontFamily">@font/baemin</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>