<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray200"
    tools:context=".ACTIVITY.LoginActivity">
    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        >
        <ImageView
            android:id="@+id/title_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/app_title"
            ></ImageView>
        <ImageView
            android:id="@+id/app_logo_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/main_logo_version3"
            ></ImageView>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_layout"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/bottom_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom_tab_shape"
                    app:tabIndicatorColor="@color/oneMinus"
                    app:tabIndicator="@drawable/custom_indicator"
                    >
                </com.google.android.material.tabs.TabLayout>
    </FrameLayout>
</RelativeLayout>
