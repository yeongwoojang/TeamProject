<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dialog"
    android:orientation="vertical"
    android:background="@drawable/complete_list_sc_style"
    tools:context=".FRAGMENT.PopupFragment"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        >
        <Button
            android:id="@+id/previousButton"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/popup_button_shape"
            android:text="이전"
            android:fontFamily="@font/baemin"
            android:layout_weight="1"
            ></Button>
        <TextView
            android:id="@+id/dateView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="날짜"
            android:fontFamily="@font/baemin"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            ></TextView>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/popup_button_shape"
            android:fontFamily="@font/baemin"
            android:text="다음"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"></View>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/scheduleList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            ></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/storeBt"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:background="@color/transparent"
            android:fontFamily="@font/baemin"
            android:text="저장"></Button>

        <Button
            android:id="@+id/additionalScheduleBt"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/transparent"
            android:fontFamily="@font/baemin"
            android:text="추가"></Button>
    </LinearLayout>
</LinearLayout>