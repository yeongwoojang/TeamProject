<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="5dp"
        >
        <ImageButton
            android:id="@+id/leftBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/transparent"
            android:src="@drawable/baseline_arrow_left_white_18dp"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            ></ImageButton>
        <TextView
            android:id="@+id/topMonthText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="상단텍스트"
            android:gravity="center_horizontal"
            android:textSize="9pt"
            android:textStyle="bold"
            android:fontFamily="@font/baemin"
            android:textColor="#ffffff"
            android:layout_weight="3"
            ></TextView>
        <ImageButton
            android:id="@+id/rightBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/transparent"
            android:src="@drawable/baseline_arrow_right_white_18dp"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            ></ImageButton>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/graphLayout"
        android:layout_below="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="5"
        >
        <TextView
            android:id="@+id/labelText"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="4"
            android:gravity="right|center"
            android:fontFamily="@font/baemin"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:text="달성률"
            ></TextView>
        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/transparent"
            android:layout_weight="1"
             />
        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            />
        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/countTextLayout"
        android:layout_below="@+id/graphLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <TextView
            android:id="@+id/entireCountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:textColor="@color/white"
            android:fontFamily="@font/baemin"
            android:layout_weight="2"
            ></TextView>
        <TextView
            android:id="@+id/completCountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:textColor="@color/white"
            android:fontFamily="@font/baemin"
            android:layout_weight="2"
            ></TextView>

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/chart2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/transparent"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/countTextLayout"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        ></androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>