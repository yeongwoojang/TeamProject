<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FRAGMENT.TodayList"
   >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    >
    <FrameLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/dayOfWeek"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:padding="10dp"
            android:text="요일"
            android:gravity="left"
            android:textSize="9pt"
            android:textStyle="bold"
            android:fontFamily="@font/baemin"
            android:textColor="#ffffff"
            />
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:padding="10dp"
            android:text="날짜"
            android:gravity="bottom"
            android:textSize="7pt"
            android:fontFamily="@font/baemin"
            android:textColor="#ffffff"
            />

<!--            <TextView-->
<!--                android:id="@+id/test"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_marginTop="2dp"-->
<!--                android:layout_marginBottom="2dp"-->
<!--                android:padding="10dp"-->
<!--                android:fontFamily="@font/baemin"-->
<!--                android:layout_gravity="right"-->
<!--                android:gravity="bottom"-->
<!--                android:text="날씨"-->
<!--                android:textColor="#ffffff"></TextView>-->
        </LinearLayout>
        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_gravity="right"
            ></ImageView>
<!--        <ImageButton-->
<!--            android:id="@+id/settingBt"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:src="@drawable/baseline_settings_white_18dp"-->
<!--            android:background="@color/transparent"-->
<!--            android:layout_gravity="right"-->
<!--            ></ImageButton>-->
    </FrameLayout>

    <LinearLayout
        android:layout_below="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            ></androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/settingDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EC224160"
        android:layout_gravity="end"
        android:gravity="start"
    >
        <ImageButton
            android:id="@+id/closeSettingBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_white_18dp"
            android:background="@color/transparent"

           />
        <LinearLayout
            android:id="@+id/settingContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/closeSettingBt"
            >

            <TextView
                android:id="@+id/shareBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공유하기"
                android:fontFamily="@font/baemin"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:padding="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                ></LinearLayout>
        <TextView
            android:id="@+id/logoutBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:fontFamily="@font/baemin"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:padding="10dp"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                ></LinearLayout>
            <TextView
                android:id="@+id/appUnlinkBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앱 연결 해제"
                android:fontFamily="@font/baemin"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:padding="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                ></LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>