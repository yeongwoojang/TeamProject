<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weatherofweek"
    tools:context=".FRAGMENT.WeatherOfWeek"
    >
    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="5dp"
        >
        <ImageButton
            android:id="@+id/leftBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/transparent"
            android:src="@drawable/baseline_arrow_left_white_18dp"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            ></ImageButton>
        <TextView
            android:id="@+id/topMonthText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="상단텍스트"
            android:gravity="center_horizontal"
            android:textSize="9pt"
            android:textStyle="bold"
            android:fontFamily="@font/baemin"
            android:textColor="#ffffff"
            android:layout_weight="3"
            ></TextView>
        <ImageButton
            android:id="@+id/rightBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/transparent"
            android:src="@drawable/baseline_arrow_right_white_18dp"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            ></ImageButton>
    </LinearLayout>


</RelativeLayout>